<% layout("/layouts/boilerplate") %>

    <div class="row mt-3">
        <div class="col-8 offset-2">
            <br><br>
            <h3>Create New Listing</h3>
            <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="listing[title]" placeholder="title" class="form-control" required>
                    <div class="valid-feedback">Good Title</div>
                    <div class="invalid-feedback">Missing Title</div>
                </div>
                
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea rows="6" cols="30" type="text" name="listing[description]" class="form-control" required></textarea>
                    <div class="invalid-feedback">Missing Description</div>
                </div>
                
                <div class="mb-3">
                    <label for="image" class="form-label">Upload Image</label>
                    <input type="file" name="listing[image]" class="form-control">
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input type="number" name="listing[price]" placeholder="price" class="form-control" required>
                        <div class="invalid-feedback">Missing Price</div>
                    </div>
                
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">country</label>
                        <input type="text" name="listing[country]" placeholder="country" class="form-control" required>
                        <div class="invalid-feedback">Missing Country</div>
                    </div>
                </div>
                
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="listing[location]" placeholder="location" class="form-control" required>
                    <div class="invalid-feedback">Missing Location</div>
                </div>
                <br>
                <button class="btn btn-dark add-btn mt-3">  ADD  </button>
                <br><br>
            </form>
        </div>
    </div>
