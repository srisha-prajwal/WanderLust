<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-6 offset-3">
        <h1>Sign-Up for Wanderlust</h1>
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" placeholder="" id="username" class="form-control" required>
                <div class="valid-feedback">Good Username</div>
                <div class="invalid-feedback">Missing Username</div>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" name="email" placeholder="" id="email" class="form-control" required>
                <div class="valid-feedback">Valid Email</div>
                <div class="invalid-feedback">Missing/Invalid Email</div>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" placeholder="" id="password" class="form-control" required>
                <div class="valid-feedback">Strong Password</div>
                <div class="invalid-feedback">Missing/Weak Password</div>
            </div>

            <button class="btn btn-success">Sign-Up</button>
        </form>
    </div>
</div>